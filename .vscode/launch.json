    "version": "0.2.0",
    "configurations": [
      {
        "name": "(gdb) Fortran",

        // -- TODO regular dgb
        "type": "cppdbg", 

        // -- TODO for nvidia-cuda
        // "type": "cuda-gdb",

        "request": "launch",

        // -- TODO gpu debug
        // "program": "${workspaceFolder}/install/bin/quick.cuda", 

        // -- TODO cpu debug easier to debug, full variables visible
        "program": "${workspaceFolder}/install/bin/quick",  


        // "args": ["${workspaceFolder}/docs/examples/meth_molden.xyz"], // Possible input molden for quick.cuda
        "args": ["${workspaceFolder}/docs/examples/meth_qcschema.xyz"], // -- * for geometry optimization
        // "args": ["${workspaceFolder}/docs/examples/meth_qcschema_noptim.xyz"], // -- * for geometry optimization
        "env": { "QUICK_BASIS" : "${workspaceFolder}/install/basisinstall/basis"},  //-- ! Buggy Replace "value_here" with the desired value
        
        // -- ! cuda-gdb suggested fix https://forums.developer.nvidia.com/t/vscode-debug-matrixmul-example-fails-with-cuda-driver-has-hit-an-internal-error/239437/2
        // "envFile": "${workspaceFolder}/vscode_var_env.env",
        
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        
        "externalConsole": false,

        
        

        // -- TODO Path to cuda-gdb for cuda debugging
        // "MIMode": "cuda-gdb",
        // "miDebuggerPath": "/usr/local/cuda/bin/cuda-gdb", 

        // -- TODO Path to gdb for regular debugging
        "MIMode": "gdb",
        "miDebuggerPath": "/usr/bin/gdb", 

        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true,
          },
        ],
      },
    ],
  }