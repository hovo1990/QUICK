{
    "fortran.fortls.disabled": false,
    "fortran.logging.level": "Debug",
    "fortran.fortls.path": "/usr/local/bin/fortls",
    // -- TODO these sets the arguments for cmake tools
    "cmake.configureArgs": [
        "-DCOMPILER=GNU",
        "-DCMAKE_INSTALL_PREFIX=${workspaceFolder}/../install",
        "-DCUDA=TRUE",
        "-DMPI=TRUE",
        "-DCMAKE_BUILD_TYPE=Debug",
        "--graphviz=quick.dot"
    ],
    "cmake.configureOnOpen": false,
    "cmake.configureOnEdit": false,
    "terminal.integrated.env.linux": {
        "QUICK_BASIS": "${workspaceFolder}/install/basis"
    }
}